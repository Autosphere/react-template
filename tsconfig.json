{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noResolve": false,
    "jsx": "react-native",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": [
      "node"
    ],
    "baseUrl": "."
  },
  "include": [
    "./config/**/*",
    "./server/**/*",
    "./src/**/*",
    "./types/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
